#!/usr/bin/env bash

# Branch to build (develop by default)
#
# If there is no given branch in the repository,
# then the build scripts will use 'develop' branch
GIT_BRANCH=develop

# Specifies the TCP/IP on which postgres is to listen for connections from the applications.
POSTGRES_PORT=5432

# Specifies the config that will be used for dappctrl execution
DAPPCTRL_CONFIG=dappctrl-dev.config.json

# Dapp GUI repository path (feel free to change)
DAPP_GUI_DIR=~/privatix/dapp-gui

# Pay your attention, that the go projects
# should have a very specific locations (eg `${GOPATH}/src/github.com/...`)
#
# Dapp controller repository path
DAPPCTRL_DIR=${GOPATH}/src/github.com/privatix/dappctrl

# Dapp openvpn repository path
DAPP_OPENVPN_DIR=${GOPATH}/src/github.com/privatix/dapp-openvpn

# Do not touch variables below
#
# List of repositories
REPOSITORIES=(
            ${DAPPCTRL_DIR}
            ${DAPP_GUI_DIR}
            ${DAPP_OPENVPN_DIR}
)

# List of github URLs
GIT_URLS=(
            https://github.com/Privatix/dappctrl.git
            https://github.com/Privatix/dapp-gui.git
            https://github.com/Privatix/dapp-openvpn.git
)

##

DAPPCTRL_BIN=./bin/dappctrl
DAPPCTRL_LOG=./bin/dappctrl/log
DAPPCTRL=dappctrl
DAPPCTRL_AGENT_CONFIG=dappctrl.agent.config.json
DAPPCTRL_CLIENT_CONFIG=dappctrl.client.config.json

##

DAPP_OPENVPN_BIN=./bin/dapp_openvpn
DAPP_OPENVPN_LOG=./bin/dapp_openvpn/log

DAPP_OPENVPN_INST=dapp-openvpn-inst
OPENVPN_INST=openvpn-inst
DAPP_OPENVPN=dappvpn

DAPP_OPENVPN_TEMPLATES_LOCATION=files/example

DAPP_VPN_AGENT_CONFIG=dappvpn.agent.config.json
DAPP_VPN_CLIENT_CONFIG=dappvpn.client.config.json

##
OPENVPN_INST_DIR=./openvpn_inst
OPENVPN_SERVER_BIN=./bin/adjustpathdir/openvpn_server
DAPP_VPN_CONFIG=dappvpn.config.json

INSTALLER_AGENT_CONFIG=installer.agent.config.json
INSTALLER_CLIENT_CONFIG=installer.client.config.json
INSTALLER_CONFIG=installer.config.json

##

DAPP_GUI_BIN=./bin/dapp_gui/

##
